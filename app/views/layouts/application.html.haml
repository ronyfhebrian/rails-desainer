!!!
%html
%head
  %title Desainer
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %link{ rel: "stylesheet", href: "http://cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.css"}
  %link{ rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"}
  = csrf_meta_tags
%body
  %header
    .wrapper.clearfix
      #logo= link_to "DESAINER", root_path
      %nav
        - if user_signed_in?
          = link_to current_user.name, edit_user_registration_path
          = link_to "Tambah Inspirasi Baru", new_post_path, class: "button"
        - else
          = link_to "Masuk", new_user_session_path
          = link_to "Daftar", new_user_registration_path, class: "button"
  %p.notice= notice
  %p.alert= alert
  .wrapper
    = yield
